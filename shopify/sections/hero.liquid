<section class="homepage-hero" style="padding: 40px; text-align: center;">
  <h1>{{ section.settings.heading }}</h1>
  <p>{{ section.settings.subheading }}</p>
</section>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to My Shopify Theme"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "This is your first custom section."
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
