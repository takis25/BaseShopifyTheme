<section class="featured-collection" style="background-color: var(--featured-collection-bg);">
  <div class="container">
    {% if section.settings.title != blank %}
      <h2 class="section-title" style="color: var(--featured-collection-title-color);">{{ section.settings.title }}</h2>
    {% endif %}

    {% if section.settings.collection != blank %}
      <div class="product-grid">
        {% for product in section.settings.collection.products limit: section.settings.products_to_show %}
          <div class="product-card">
            <a href="{{ product.url }}" class="product-link">
              <div class="product-image">
                <img src="{{ product.featured_image | image_url: width: 500 }}" alt="{{ product.title }}">
                {% if product.compare_at_price > product.price %}
                  <span class="badge sale-badge">Sale</span>
                {% endif %}
                {% unless product.available %}
                  <span class="badge sold-out">Sold Out</span>
                {% endunless %}
              </div>
              <div class="product-info">
                <h3>{{ product.title }}</h3>
                <p class="price">{{ product.price | money }}</p>
              </div>
            </a>

            {% if product.has_only_default_variant and product.available %}
              <form method="post" action="/cart/add" class="quick-add-form" data-product-id="{{ product.id }}">
                <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                <input type="number" name="quantity" value="1" min="1" class="quantity-input">
                <button type="submit" class="quick-add">Add to cart</button>
              </form>
            {% else %}
              <a href="{{ product.url }}" class="quick-view">View product</a>
            {% endif %}

          </div>
        {% endfor %}
      </div>
      {% if section.settings.button_label != blank %}
        <div class="collection-button">
          <a href="{{ section.settings.collection.url }}" class="btn">
            {{ section.settings.button_label }}
          </a>
        </div>
      {% endif %}
    {% else %}
      <p>Please select a collection.</p>
    {% endif %}
  </div>
</section>

<style>
.featured-collection {
  padding: 40px 20px;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
}

.section-title {
  font-size: 2rem;
  margin-bottom: 2rem;
  text-align: center;
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
}

.product-card {
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 16px;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.product-image img {
  max-width: 100%;
  height: auto;
  border-radius: 4px;
}

.badge {
  display: inline-block;
  margin-top: 8px;
  padding: 4px 8px;
  font-size: 0.75rem;
  border-radius: 4px;
  color: #fff;
}

.sale-badge {
  background-color: #e60023;
}

.sold-out {
  background-color: #999;
}

.product-info h3 {
  font-size: 1.1rem;
  margin: 10px 0 5px;
}

.price {
  font-size: 1rem;
  color: #555;
}

.quick-add-form {
  margin-top: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
}

.quantity-input {
  width: 60px;
  padding: 0.4rem;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-size: 14px;
  text-align: center;
}

.quick-add {
  background-color: var(--featured-collection-button-bg);
  color: var(--featured-collection-button-text);
  padding: 0.5rem 1rem;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.quick-add:hover {
  opacity: 0.9;
}

.collection-button {
  text-align: center;
  margin-top: 2rem;
}

.collection-button .btn {
  padding: 0.75rem 1.5rem;
  background-color: var(--featured-collection-button-bg);
  color: var(--featured-collection-button-text);
  text-decoration: none;
  font-weight: bold;
  border-radius: 4px;
  display: inline-block;
}

.collection-button .btn:hover {
  opacity: 0.9;
}
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const root = document.documentElement;
    root.style.setProperty('--featured-collection-bg', '{{ section.settings.background_color }}');
    root.style.setProperty('--featured-collection-title-color', '{{ section.settings.title_color }}');
    root.style.setProperty('--featured-collection-button-bg', '{{ section.settings.button_background }}');
    root.style.setProperty('--featured-collection-button-text', '{{ section.settings.button_text_color }}');

    const forms = document.querySelectorAll('.quick-add-form');
    forms.forEach(form => {
      form.addEventListener('submit', async function (e) {
        e.preventDefault();
        const btn = form.querySelector('button');
        const quantity = form.querySelector('input[name="quantity"]').value || 1;
        const id = form.querySelector('input[name="id"]').value;

        btn.textContent = 'Adding...';

        const res = await fetch('/cart/add.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Accept': 'application/json'
          },
          body: JSON.stringify({ id, quantity })
        });

        if (res.ok) {
          btn.textContent = 'âœ“ Added!';
          updateCartCount(); // ðŸ‘ˆ update cart badge
          openCartDrawer();
          setTimeout(() => { btn.textContent = 'Add to cart'; }, 1500);
        } else {
          btn.textContent = 'Error';
        }
      });
    });

    async function updateCartCount() {
  try {
    const res = await fetch('/cart.js');
    if (!res.ok) return;
    const cart = await res.json();
    const count = cart.item_count;
    const cartBadge = document.querySelector('.cart-badge');
    if (cartBadge) {
      cartBadge.textContent = count;
      cartBadge.style.display = count > 0 ? 'inline-block' : 'none';

      // Trigger animation
      cartBadge.classList.remove('animate');
      void cartBadge.offsetWidth; // Force reflow
      cartBadge.classList.add('animate');
    }
  } catch (err) {
    console.error("Cart count update failed", err);
  }
}

    updateCartCount();
    

  });
</script>
{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section title",
      "default": "Featured Collection"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Number of products to show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "View all"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f8f8f8"
    },
    {
      "type": "color",
      "id": "button_background",
      "label": "Button background color",
      "default": "#007aff"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title text color",
      "default": "#333333"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection",
      "category": "Custom"
    }
  ]
}
{% endschema %}
