<footer class="site-footer">
  <div class="footer-inner">

    <!-- Column 1: Text block -->
    <div class="footer-col">
      {% if section.settings.footer_text != blank %}
        <p>{{ section.settings.footer_text }}</p>
      {% endif %}
    </div>

    <!-- Column 2: Navigation links -->
    <div class="footer-col">
      {% if section.settings.column2_heading != blank %}
        <h4>{{ section.settings.column2_heading }}</h4>
      {% endif %}
      <ul>
        {% for link in linklists[section.settings.column2_menu].links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </div>

    <!-- Column 3: Social icons -->
    <div class="footer-col">
      {% assign socials = '' %}
      {% if section.settings.facebook_url != blank or section.settings.instagram_url != blank or section.settings.twitter_url != blank or section.settings.youtube_url != blank %}
        <h4>Follow us</h4>
        <div class="footer-social">
  <ul>
    {% if section.settings.facebook_url != blank %}
      <li>
        <a href="{{ section.settings.facebook_url }}" target="_blank" aria-label="Facebook">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M22 12c0-5.52-4.48-10-10-10S2 6.48 2 12c0 5 3.66 9.13 8.44 9.88v-6.99H7.9v-2.89h2.54V9.84c0-2.5 1.49-3.89 3.77-3.89 1.09 0 2.23.2 2.23.2v2.45h-1.26c-1.24 0-1.63.77-1.63 1.56v1.87h2.77l-.44 2.89h-2.33v6.99C18.34 21.13 22 17 22 12z"/>
          </svg>
        </a>
      </li>
    {% endif %}
    {% if section.settings.instagram_url != blank %}
      <li>
        <a href="{{ section.settings.instagram_url }}" target="_blank" aria-label="Instagram">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M7 2C4.243 2 2 4.243 2 7v10c0 2.757 2.243 5 5 5h10c2.757 0 5-2.243 5-5V7c0-2.757-2.243-5-5-5H7zm10 2a3 3 0 013 3v10a3 3 0 01-3 3H7a3 3 0 01-3-3V7a3 3 0 013-3h10zm-5 3a5 5 0 100 10 5 5 0 000-10zm0 2a3 3 0 110 6 3 3 0 010-6zm4.5-2a1.5 1.5 0 110 3 1.5 1.5 0 010-3z"/>
          </svg>
        </a>
      </li>
    {% endif %}
    {% if section.settings.twitter_url != blank %}
      <li>
        <a href="{{ section.settings.twitter_url }}" target="_blank" aria-label="Twitter">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M22.46 6c-.77.35-1.6.58-2.46.69a4.3 4.3 0 001.88-2.37 8.6 8.6 0 01-2.72 1.04 4.28 4.28 0 00-7.3 3.9A12.13 12.13 0 013 5.1a4.28 4.28 0 001.32 5.7A4.25 4.25 0 012.8 10v.05a4.28 4.28 0 003.43 4.2 4.3 4.3 0 01-1.93.07 4.29 4.29 0 004 2.98A8.6 8.6 0 012 19.54a12.1 12.1 0 006.56 1.92c7.88 0 12.2-6.53 12.2-12.2v-.56A8.75 8.75 0 0024 5.4a8.56 8.56 0 01-2.54.7z"/>
          </svg>
        </a>
      </li>
    {% endif %}
    {% if section.settings.youtube_url != blank %}
      <li>
        <a href="{{ section.settings.youtube_url }}" target="_blank" aria-label="YouTube">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M10 15l5.19-3L10 9v6zm12-3c0-2.49-.2-4.04-.49-5.13a3 3 0 00-2.11-2.11C18.31 4.47 12 4.47 12 4.47s-6.31 0-7.4.29a3 3 0 00-2.11 2.11C2.2 7.96 2 9.51 2 12s.2 4.04.49 5.13a3 3 0 002.11 2.11c1.09.29 7.4.29 7.4.29s6.31 0 7.4-.29a3 3 0 002.11-2.11c.29-1.09.49-2.64.49-5.13z"/>
          </svg>
        </a>
      </li>
    {% endif %}
  </ul>
</div>

      {% endif %}
    </div>
  </div>

  <div class="footer-bottom">
    <p>&copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. All rights reserved.</p>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer text",
      "default": "This is a customizable footer text block."
    },
    {
      "type": "text",
      "id": "column2_heading",
      "label": "Second column heading",
      "default": "Quick Links"
    },
    {
      "type": "link_list",
      "id": "column2_menu",
      "label": "Second column menu",
      "default": "main-menu"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "Twitter URL"
    },
    {
      "type": "url",
      "id": "youtube_url",
      "label": "YouTube URL"
    }
  ]
}
{% endschema %}
