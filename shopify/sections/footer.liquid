<style>
  :root {
    --footer-text-color: {{ section.settings.footer_text_color }};
    --footer-social-icon-color: {{ section.settings.footer_social_icon_color }};
    --footer-background-color: {{ section.settings.footer_background_color }};
  }
</style>

{% assign active_columns = 0 %}
{% if section.settings.show_column1 %}{% assign active_columns = active_columns | plus: 1 %}{% endif %}
{% if section.settings.show_column2 %}{% assign active_columns = active_columns | plus: 1 %}{% endif %}
{% if section.settings.show_column3 %}{% assign active_columns = active_columns | plus: 1 %}{% endif %}
{% if section.settings.show_column4 %}{% assign active_columns = active_columns | plus: 1 %}{% endif %}
{% if section.settings.show_column5 %}{% assign active_columns = active_columns | plus: 1 %}{% endif %}

<footer class="footer">
  <div class="footer__grid footer__grid--columns-{{ active_columns }}">
    {% if section.settings.show_column1 %}
    <div class="footer__column">
      <h3>{{ section.settings.footer_column1_title }}</h3>
      <div class="rte" style="max-width: 250px; word-wrap: break-word;">{{ section.settings.footer_column1_content }}</div>
    </div>
    {% endif %}

    {% if section.settings.show_column2 %}
    <div class="footer__column">
      <h3>{{ section.settings.footer_column2_title }}</h3>
      {% if section.settings.footer_column2_menu != blank %}
        <ul>
          {% for link in linklists[section.settings.footer_column2_menu].links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      {% endif %}
    </div>
    {% endif %}

    {% if section.settings.show_column3 %}
    <div class="footer__column">
      <h3>{{ section.settings.footer_column3_title }}</h3>
      {% if section.settings.footer_column3_menu != blank %}
        <ul>
          {% for link in linklists[section.settings.footer_column3_menu].links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      {% endif %}
    </div>
    {% endif %}

    {% if section.settings.show_column4 %}
    <div class="footer__column">
      <h3>{{ section.settings.footer_column4_title }}</h3>
      {% if section.settings.footer_column4_menu != blank %}
        <ul>
          {% for link in linklists[section.settings.footer_column4_menu].links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      {% endif %}
    </div>
    {% endif %}

    {% if section.settings.show_column5 %}
    <div class="footer__column">
      <h3>{{ section.settings.footer_column5_title }}</h3>
      {% if section.settings.show_social_icons %}
        <ul class="footer__social-icons footer__social-icons--vertical">
          {% if section.settings.social_facebook %}
            <li><a href="{{ section.settings.social_facebook }}" target="_blank" rel="noopener" aria-label="Facebook">
              <i class="fa-brands fa-facebook-f"></i><span>Facebook</span>
            </a></li>
          {% endif %}
          {% if section.settings.social_instagram %}
            <li><a href="{{ section.settings.social_instagram }}" target="_blank" rel="noopener" aria-label="Instagram">
              <i class="fa-brands fa-instagram"></i><span>Instagram</span>
            </a></li>
          {% endif %}
          {% if section.settings.social_twitter %}
            <li><a href="{{ section.settings.social_twitter }}" target="_blank" rel="noopener" aria-label="Twitter">
              <i class="fa-brands fa-x-twitter"></i><span>Twitter</span>
            </a></li>
          {% endif %}
          {% if section.settings.social_youtube %}
            <li><a href="{{ section.settings.social_youtube }}" target="_blank" rel="noopener" aria-label="YouTube">
              <i class="fa-brands fa-youtube"></i><span>YouTube</span>
            </a></li>
          {% endif %}
          {% if section.settings.social_pinterest %}
            <li><a href="{{ section.settings.social_pinterest }}" target="_blank" rel="noopener" aria-label="Pinterest">
              <i class="fa-brands fa-pinterest-p"></i><span>Pinterest</span>
            </a></li>
          {% endif %}
          {% if section.settings.social_tiktok %}
            <li><a href="{{ section.settings.social_tiktok }}" target="_blank" rel="noopener" aria-label="TikTok">
              <i class="fa-brands fa-tiktok"></i><span>TikTok</span>
            </a></li>
          {% endif %}
        </ul>
      {% endif %}
    </div>
    {% endif %}
  </div>

  <div class="footer__bottom">
    <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    { "type": "checkbox", "id": "show_column1", "label": "Show first column", "default": true },
    { "type": "text", "id": "footer_column1_title", "label": "First column title", "default": "About Us" },
    { "type": "richtext", "id": "footer_column1_content", "label": "First column content" },

    { "type": "checkbox", "id": "show_column2", "label": "Show second column", "default": true },
    { "type": "text", "id": "footer_column2_title", "label": "Second column title", "default": "Explore" },
    { "type": "link_list", "id": "footer_column2_menu", "label": "Second column menu" },

    { "type": "checkbox", "id": "show_column3", "label": "Show third column", "default": true },
    { "type": "text", "id": "footer_column3_title", "label": "Third column title", "default": "Information" },
    { "type": "link_list", "id": "footer_column3_menu", "label": "Third column menu" },

    { "type": "checkbox", "id": "show_column4", "label": "Show fourth column", "default": true },
    { "type": "text", "id": "footer_column4_title", "label": "Fourth column title", "default": "More" },
    { "type": "link_list", "id": "footer_column4_menu", "label": "Fourth column menu" },

    { "type": "checkbox", "id": "show_column5", "label": "Show fifth column (social) ", "default": true },
    { "type": "text", "id": "footer_column5_title", "label": "Fifth column title", "default": "Follow Us" },
    { "type": "checkbox", "id": "show_social_icons", "label": "Show social icons", "default": true },
    { "type": "color", "id": "footer_background_color", "label": "Footer background color", "default": "#f5f5f5" },
    { "type": "color", "id": "footer_text_color", "label": "Footer text color", "default": "#333333" },
    { "type": "color", "id": "footer_social_icon_color", "label": "Social icon color", "default": "#333333" },

    { "type": "url", "id": "social_facebook", "label": "Facebook URL" },
    { "type": "url", "id": "social_instagram", "label": "Instagram URL" },
    { "type": "url", "id": "social_twitter", "label": "Twitter (X) URL" },
    { "type": "url", "id": "social_youtube", "label": "YouTube URL" },
    { "type": "url", "id": "social_pinterest", "label": "Pinterest URL" },
    { "type": "url", "id": "social_tiktok", "label": "TikTok URL" }
    
  ],
  "presets": [
    { "name": "Footer" }
  ]
}
{% endschema %}
